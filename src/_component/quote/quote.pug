mixin quote( config )
  - var { formTitle, formID, goTo, formDescription, quoteClass } = config
  div(
    id= formID
    class= quoteClass
  )
    header.quote__header
      img(src="../asset/image/logo1.png", alt="")
      h2.quote__title= formTitle 
      p.quote__title= formDescription

    label.home__button(
      for= goTo.goToForm
    )= goTo.label
    
    .quote__form(
      data-tf-widget= formID
      data-tf-iframe-props= formTitle 
      data-tf-medium="snippet" 
      style="width:100%;height:100%;"
    )
